@model SMS.Models.Login.UserRequestDto;
@{
    Layout = "_LayoutLogin";
}

<div class="login-box">
    @* <div class="login-logo">
        <a asp-action="Login" asp-controller="Account"><b>Admin</b>LTE</a>
    </div> *@
    <div class="login-logo">
        <img src="~/images/siteimages/st_new.png" style="max-width:160px;" />
    </div>
    <!-- /.login-logo -->

    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">
                You forgot your password? Here you can easily retrieve a new one.
            </p>

            <form asp-action="ForgotPassword" asp-controller="Account" method="post">
                <!-- Email -->
                <div class="mb-3">
                    <div class="input-group">
                        <input asp-for="EmailOrUserName" type="email" class="form-control" placeholder="Email" />
                        <span class="input-group-text">
                            <i class="fas fa-envelope"></i>
                        </span>
                    </div>
                    <span asp-validation-for="EmailOrUserName" class="text-danger"></span>
                </div>

                <!-- Submit button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">
                        Request new password
                    </button>
                </div>
            </form>

            <!-- Links -->
            <p class="mt-3 mb-1">
                <a asp-action="Login" asp-controller="Account">Back to Login</a>
            </p>
           @*  <p class="mb-0">
                <a asp-action="SignUp" asp-controller="Account" class="text-center">
                    Register a new membership
                </a>
            </p> *@
        </div>
    </div>
</div>
